<!DOCTYPE html>
<html>

<head>
	<title> </title>
	<link rel="stylesheet" href="admin1.css">
</head>

<body>
	<div>
		<h1 style="font-size: 500%;">WELCOME ADMIN</h1>
		<div id="center">
			<div id="left">
				<form action="/insert" method="post">
					<table>
						<tr> <b>Add new product</b> </tr>
						<tr>
							<td>ProductID:</td>
							<td> <input type="text" name="ProductID"></td>
						</tr>
						<tr>
							<td>Product Name</td>
							<td><input type="text" name="txtName" id=""></td>
						</tr>
						<tr>
							<td>Image:</td>
							<td><input type="text" name="txtImage" id=""></td>
						</tr>
						<tr>
							<td>Price:</td>
							<td><input type="text" name="txtPrice" id=""></td>
						</tr>
						<tr>
							<td>CatId</td>
							<td><input type="text" name="CatID" id=""></td>
						</tr>

						<tr>

							<td><input type="submit" name="Add" value="Add" id=""></td>
							<td><button>Cancel</button></td>
						</tr>
					</table>
					<h1>Hello {{user.name}} and {{user.role}}</h1>
					<form action="/search" method="post">
						Name: <input type="text" name="txtSearch" />
						<input type="submit" value="Search">
					</form>
			</div>
			</form>

			<div id="right">
				<table id="table" style="background-color:#B4F2F8;">
					<tr>
						<th>ProductID</th>
						<th>ProductName</th>
						<th style="width: 200px;">Image</th>
						<th>Price</th>
						<th>CatId</th>
						<th>Detail</th>
						<th>Introduction</th>
						<th>Delete</th>
						<th>Update</th>
					</tr>
					<tr>
						{{#each data}}


					<tr>
						<td> {{name}} </td>
						<td> {{prices}} </td>
						<td><img class="image" src="{{image}}  "></td>
						<td>
							$r[3] </td>
						<td>$r[4] </td>
						<td>$r[5] </td>
						<td> $r[6] </td>
						<td><a href="/delete?id={{_id}}">Delete</a></td>
						<td> <a href="/edit?id={{_id}}">Edit</a></td>
					</tr>
					{{/each}}
					</tr>
				</table>
			</div>
		</div>
		<div id="footer"> </div>
</body>

</html>